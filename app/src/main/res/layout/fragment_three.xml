<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="670dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/cruiser_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cruiser_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cruiser" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/carrier_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/carrier_text"
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="toggle_contents"
                    android:text="Carrier" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/destroyer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/destroyer_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Destroyer" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dreadnought_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dreadnought_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dreadnought" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fighter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fighter_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fighter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/infantry_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infantry_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Infantry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/warsun_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/warsun_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Warsun" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/customShipHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Select which ships will have custom stats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.265"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/saveRaceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="372dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Save Race"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.273"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.194" />
        <!-- Clickable title -->
        <!--content to hide/show -->


    </android.support.constraint.ConstraintLayout>

</FrameLayout>